{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build for rhino 8",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/LilyPadGH.csproj",
        "--configuration",
        "Debug",
        "/p:RhinoVersion=8"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "release for rhino 8",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/LilyPadGH.csproj",
        "--configuration",
        "Release",
        "/p:RhinoVersion=8"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$msCompile"
    }
  ]
}